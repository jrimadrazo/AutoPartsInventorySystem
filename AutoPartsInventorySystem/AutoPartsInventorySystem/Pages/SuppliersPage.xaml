                                Stretch="Uniform"
                                UseLayoutRounding="False" />
                        </Button.Content>
                    </Button>
                </Border>
                <Border
                    Height="30"
                    Background="LightGray"
                    BorderBrush="LightSlateGray"
                    BorderThickness="0,1,1,1"
