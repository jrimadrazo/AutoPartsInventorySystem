<Window
    x:Class="AutoPartsInventorySystem.SuppliersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutoPartsInventorySystem"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SuppliersPage"
    Width="600"
    Height="350"
    FontSize="15"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListBox
            x:Name="lbSupplierData"
            Grid.Column="0"
            Margin="3"
            ItemsSource="{Binding Path=SupplierList}"
            SelectedItem="{Binding Path=SelectedSupplier}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=SupplierName}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <GridSplitter
            Grid.Column="1"
            Width="2"
            Margin="0,3"
            HorizontalAlignment="Stretch" />
        <Grid Grid.Column="2" DataContext="{Binding Path=SelectedSupplier}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="3"
                HorizontalAlignment="Right"
                Text="Supplier ID: " />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="3"
                HorizontalAlignment="Right"
                Text="Supplier Name: " />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="3"
                HorizontalAlignment="Right"
                Text="Details: " />
            <TextBlock
                x:Name="blkSupplierID"
                Grid.Row="0"
                Grid.Column="1"
                Margin="3"
                Text="{Binding Path=SupplierID}" />
            <TextBlock
                x:Name="blkSupplierName"
                Grid.Row="1"
                Grid.Column="1"
                Margin="3"
                Text="{Binding Path=SupplierName}" />
            <TextBlock
                x:Name="blkSupplierDetails"
                Grid.Row="2"
                Grid.Column="1"
                Margin="3"
                Text="{Binding Path=SupplierDetails}"
                TextWrapping="Wrap" />
            <StackPanel
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Border
                    Height="30"
                    Background="LightGray"
                    BorderBrush="LightSlateGray"
                    BorderThickness="1,1,0,1"
                    CornerRadius="3,0,0,3">
                    <Button
                        x:Name="btnAddSupplierWindow"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="btnAddSupplierWindow_Click">
                        <Button.Content>
                            <Path
                                Width="20"
                                Height="20"
                                Margin="3,0"
                                Data="F1 M 2.88,17.2725C 0.959991,15.3475 0,12.95 0,10.08C 0,7.21002 0.959991,4.8125 2.88,2.88751C 4.80002,0.962494 7.19125,0 10.0537,0C 12.9163,0 15.3163,0.962494 17.2538,2.88751C 19.1913,4.8125 20.16,7.21002 20.16,10.08C 20.16,12.95 19.1913,15.3475 17.2538,17.2725C 15.3163,19.1975 12.9163,20.16 10.0537,20.16C 7.19125,20.16 4.80002,19.1975 2.88,17.2725 Z M 3.84,11.3625L 8.81998,11.3625L 8.81998,16.32L 11.34,16.32L 11.34,11.3625L 16.32,11.3625L 16.32,8.85001L 11.34,8.85001L 11.34,3.84L 8.81998,3.84L 8.81998,8.85001L 3.84,8.85001L 3.84,11.3625 Z "
                                Fill="Black"
                                Stretch="Uniform"
                                UseLayoutRounding="False" />
                        </Button.Content>
                    </Button>
                </Border>
                <Border
                    Height="30"
                    Background="LightGray"
                    BorderBrush="LightSlateGray"
                    BorderThickness="1">
                    <Button
