                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="3"
                            HorizontalAlignment="Right"
                            Text="Date: " />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="3"
                            HorizontalAlignment="Right"
                            Text="Quantity: " />
                        <TextBlock
                            x:Name="blkOrderID"
                            Grid.Row="0" Text="{Binding Path=OrderID}"
                            Grid.Column="1"
                            Margin="3" />
                        <TextBlock
                            x:Name="blkOProductID"
                            Grid.Row="1" Text="{Binding Path=ProductID}"
                            Grid.Column="1"
                            Margin="3" />
                        <TextBlock
