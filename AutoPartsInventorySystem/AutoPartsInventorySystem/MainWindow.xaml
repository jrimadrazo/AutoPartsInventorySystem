                            Margin="3"
                            HorizontalAlignment="Right"
                            Text="Product ID: " />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="3"
                            HorizontalAlignment="Right"
                            Text="Product Name: " />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="3"
                            HorizontalAlignment="Right"
                            Text="Product Type: " />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="3"
                            HorizontalAlignment="Right"
                            Text="Quantity: " />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="3"
                            HorizontalAlignment="Right"
                            Text="Color: " />
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="3"
                            HorizontalAlignment="Right"
                            Text="Buying Price: " />
                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="3"
                            HorizontalAlignment="Right"
                            Text="Selling Price: " />
                        <TextBlock
                            x:Name="blkProductID"
                            Grid.Row="0" Text="{Binding Path=ProductID}"
                            Grid.Column="1"
                            Margin="3" />
                        <TextBlock
                            x:Name="blkProductName"
                            Grid.Row="1" Text="{Binding Path=ProductName}"
                            Grid.Column="1"
                            Margin="3" />
                        <TextBlock
                            x:Name="blkProductType"
                            Grid.Row="2" Text="{Binding Path=ProductType}"
                            Grid.Column="1"
                            Margin="3" />
                        <TextBlock
                            x:Name="blkQuantity"
                            Grid.Row="3" Text="{Binding Path=ProductQuantity}"
                            Grid.Column="1"
                            Margin="3" />
                        <TextBlock
                            x:Name="blkColor"
                            Grid.Row="4" Text="{Binding Path=ProductColor}"
                            Grid.Column="1"
                            Margin="3" />
                        <TextBlock
                            x:Name="blkBuyingPrice"
                            Grid.Row="5" Text="{Binding Path=ProductBuyingPrice}"
                            Grid.Column="1"
                            Margin="3" />
                        <TextBlock
                            x:Name="blkSellingPrice"
                            Grid.Row="6" Text="{Binding Path=ProductSellingPrice}"
                            Grid.Column="1"
                            Margin="3" />
                        <StackPanel
