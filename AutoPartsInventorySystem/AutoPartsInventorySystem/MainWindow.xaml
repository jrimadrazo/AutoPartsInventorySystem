                                <TextBlock Text="{Binding Path=DateOrdered, StringFormat={}{0:dd MMM yyyy}}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <GridSplitter Grid.Column="1" Width="2" Margin="0,3" HorizontalAlignment="Stretch"/>
